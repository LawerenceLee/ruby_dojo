<h1>New Student</h1>

<%= form_for(@student, url: :student_create) do |f| %>
    <% if @student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="fields">
        <%= label_tag(:first_name, "First Name:") %>
        <%= f.text_field :first_name %><br><br>
        <%= label_tag(:last_name, "Last Name:") %>
        <%= f.text_field :last_name %><br><br>
        <%= label_tag(:email, "Email Address:") %>
        <%= f.text_field :email %><br><br>
        <%= label_tag(:dojo_id, "Dojo") %>
        <select>
          <option selected="selected" value="<%= @selected_dojo.id %>"><%= @selected_dojo.branch %></option>
          <%= @dojos.each do |dojo| %>
            <option value="<%= dojo.id %>"><%= dojo.branch %></option>
          <% end %>
        </select>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
  

<%= link_to 'Go Back', :main %>