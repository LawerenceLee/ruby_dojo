<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>

<%= form_for(@student, url: student_update_path) do |f| %>
    <% if @student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="fields">
        <%= label_tag(:first_name, "First Name:") %>
        <%= f.text_field :first_name %><br><br>
        <%= label_tag(:last_name, "Last Name:") %>
        <%= f.text_field :last_name %><br><br>
        <%= label_tag(:email, "Email Address:") %>
        <%= f.text_field :email %><br><br>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

  
<%= link_to "Home", :main %> 