<h1><%= @student.dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h1>

<h3>Email: <%= @student.email %></h3>

<h2>Cohort</h2>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr>
    <% @cohort.each do |student| %>
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
        </tr>
    <% end %>
</table><br>

<%= link_to "Home", :main %> | <%= link_to "Edit", "/dojos/#{@student.dojo.id}/students/#{@student.id}/edit" %>

