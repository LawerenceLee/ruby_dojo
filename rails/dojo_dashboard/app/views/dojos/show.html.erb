<h1><%= @dojo.branch %> Dojo</h1>

<h3>Address: <%= @dojo.street %></h3>
<h3>City: <%= @dojo.city %>, State: <%= @dojo.state %></h3><br>

<h2>Student Roster</h2>
<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    <% @dojo.students.each do |student| %>
        <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
            <td>
                <%= link_to "Show", "/dojos/#{student.dojo.id}/students/#{student.id}" %>
                <%= link_to "Edit", "/dojos/#{student.dojo.id}/students/#{student.id}/edit" %>
                <%= link_to 'Destroy', "/dojos/#{student.dojo.id}/students/#{student.id}",
                method: :delete, data: { confirm: 'Are you sure?' } %></td> 

            </td>
        </tr>
    <% end %>
</table><br>

<%= link_to "Home", :main %> | <%= link_to "Edit", "/dojos/#{@dojo.id}/edit" %>
<br>
<%= link_to "Add Student", :student_new %>
